{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "json"],
  "rules": {
    "no-console": "error",
    "@next/next/no-img-element": "off",
    "@typescript-eslint/no-explicit-any": "off"
  },
  "env": {
     "browser": true,
     "es2021": true,
     "node": true
  },
  "ignorePatterns": [
    "package.json",
    "package-lock.json"
  ]
}
